{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.swarmhive.eth/bee-23/proof.schema.json",
  "title": "Bee-23 PROOF Snapshot",
  "allOf": [
    { "$ref": "base.snapshot.schema.json" },
    {
      "properties": {
        "type": { "const": "PROOF" },
        "body": {
          "type": "object",
          "required": ["job_id", "miner", "compute_seconds", "outputs"],
          "properties": {
            "job_id": { "type": "string" },
            "miner": { "type": "string", "pattern": "^miner\\..+\\.eth$" },
            "compute_seconds": { "type": "integer", "minimum": 1 },
            "work_units": { "type": "integer", "minimum": 0 },
            "outputs": {
              "type": "object",
              "required": ["result_cid"],
              "properties": {
                "result_cid": { "type": "string", "pattern": "^ipfs://.+$" },
                "result_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
                "log_cid": { "type": "string", "pattern": "^ipfs://.+$" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
