{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://swarmorb.eth/schemas/index.schema.json",
  "title": "SwarmOrb Index",
  "description": "Manifest of all finalized epochs in SwarmOS",
  "type": "object",
  "required": ["version", "generated_at", "coordinator", "epochs", "stats"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of index generation"
    },
    "coordinator": {
      "type": "string",
      "description": "ENS name of coordinating OS",
      "pattern": "^[a-z0-9-]+\\.eth$"
    },
    "epochs": {
      "type": "array",
      "description": "List of finalized epochs (newest first)",
      "items": {
        "$ref": "#/definitions/EpochRef"
      }
    },
    "stats": {
      "$ref": "#/definitions/AggregateStats"
    }
  },
  "definitions": {
    "EpochRef": {
      "type": "object",
      "required": ["epoch_id", "start_time", "end_time", "status", "bundle_ref", "summary_hash"],
      "properties": {
        "epoch_id": {
          "type": "string",
          "pattern": "^epoch-\\d{3,}$"
        },
        "start_time": {
          "type": "string",
          "format": "date-time"
        },
        "end_time": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["finalized", "pending", "failed"]
        },
        "bundle_ref": {
          "type": "string",
          "description": "IPFS CID or relative path to epoch bundle"
        },
        "summary_hash": {
          "type": "string",
          "description": "SHA256 of SUMMARY.json"
        },
        "jobs_completed": {
          "type": "integer",
          "minimum": 0
        },
        "total_distributed": {
          "type": "string",
          "description": "Total USDC distributed in epoch"
        },
        "agents_active": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "AggregateStats": {
      "type": "object",
      "required": ["total_epochs", "total_jobs", "total_distributed", "unique_agents", "unique_clients"],
      "properties": {
        "total_epochs": {
          "type": "integer",
          "minimum": 0
        },
        "total_jobs": {
          "type": "integer",
          "minimum": 0
        },
        "total_distributed": {
          "type": "string"
        },
        "unique_agents": {
          "type": "integer",
          "minimum": 0
        },
        "unique_clients": {
          "type": "integer",
          "minimum": 0
        },
        "top_agents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AgentSummary"
          }
        }
      }
    },
    "AgentSummary": {
      "type": "object",
      "required": ["ens", "jobs_completed", "total_earned"],
      "properties": {
        "ens": {
          "type": "string"
        },
        "jobs_completed": {
          "type": "integer"
        },
        "total_earned": {
          "type": "string"
        },
        "uptime_hours": {
          "type": "number"
        }
      }
    }
  }
}
